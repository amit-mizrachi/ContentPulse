# ========================================================================
# LLM-JUDGE ENVIRONMENT CONFIGURATION
# ========================================================================
# Copy this to .env and fill in your values
# Values should match deploy/iac/terragrunt/configuration.hcl
# ========================================================================

# AWS Configuration
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key
AWS_REGION=ap-south-1

# AppConfig Bootstrap (services fetch runtime config from AppConfig)
APPCONFIG_APPLICATION_ID=your_application_id
APPCONFIG_ENVIRONMENT_ID=your_environment_id
APPCONFIG_PROFILE_ID=your_profile_id

# ========================================================================
# SERVICE PORTS (Single Source of Truth)
# These must match deploy/iac/terragrunt/configuration.hcl
# ========================================================================
PORT_GATEWAY=8000
PORT_REDIS=8001
PORT_PERSISTENCE=8002
PORT_INFERENCE=8003
PORT_JUDGE=8004

# Infrastructure Ports
PORT_REDIS_CACHE=6379
PORT_MYSQL=3306

# ========================================================================
# HEALTH CHECK CONFIGURATION
# ========================================================================
HEALTH_CHECK_INTERVAL=10
HEALTH_CHECK_TIMEOUT=5
HEALTH_CHECK_RETRIES=5
HEALTH_CHECK_PATH=/health

# ========================================================================
# MySQL Container Configuration (for docker-compose only)
# ========================================================================
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=llm_judge
MYSQL_USER=llm_judge
MYSQL_PASSWORD=password
