# ========================================================================
# CONTENTPULSE ENVIRONMENT CONFIGURATION
# ========================================================================
# Copy this to .env and fill in your values
# ========================================================================

# AWS Configuration
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key
AWS_REGION=ap-south-1

# AppConfig Bootstrap (services fetch runtime config from AppConfig)
APPCONFIG_APPLICATION_ID=your_application_id
APPCONFIG_ENVIRONMENT_ID=your_environment_id
APPCONFIG_PROFILE_ID=your_profile_id

# ========================================================================
# SERVICE PORTS
# ========================================================================
PORT_GATEWAY=8000
PORT_REDIS_SERVICE=8001
PORT_MONGODB_SERVICE=8002
PORT_CONTENT_PROCESSOR=8003
PORT_QUERY_ENGINE=8004
PORT_CONTENT_POLLER=8005

# Infrastructure Ports
PORT_REDIS_CACHE=6379
PORT_MONGODB=27017

# ========================================================================
# HEALTH CHECK CONFIGURATION
# ========================================================================
HEALTH_CHECK_INTERVAL=10
HEALTH_CHECK_TIMEOUT=5
HEALTH_CHECK_RETRIES=5
HEALTH_CHECK_PATH=/health
